{
  "manifest_version": 3,
  "name": "Copy Title and URL",
  "version": "1.0.0",
  "description": "現在のページのタイトルとURLをクリップボードにコピーします",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Copy Title and URL"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
